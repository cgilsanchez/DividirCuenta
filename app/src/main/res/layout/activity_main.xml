<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main">

    <!-- Campo de Entrada para la Cantidad Total -->
    <EditText
        android:id="@+id/totalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total a pagar"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <!-- Campo de Entrada para Número de Participantes -->
    <EditText
        android:id="@+id/numParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de participantes"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Switch para activar/desactivar propina -->
    <Switch
        android:id="@+id/switchTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir propina"
        android:layout_marginBottom="16dp" />

    <!-- Slider para seleccionar porcentaje de propina -->
    <com.google.android.material.slider.Slider
        android:id="@+id/sliderTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="5.0"
        android:stepSize="1.0"
        android:enabled="false"
        app:labelBehavior="gone"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para calcular el monto por persona -->
    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="16dp" />

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monto por persona: "
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
